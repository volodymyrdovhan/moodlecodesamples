{{!
    @template local_intellicart/instructor-rating

    This template renders the main content area for the dashboard block.

    Example context (json):
    {}
}}

{{#user.showrating}}
    <span class="user-rating product-rating">
        {{#user.rating.stars}}
            <i class="fa fa-star rating-star {{#selected}}selected{{/selected}}" data-rating="{{id}}"></i>
        {{/user.rating.stars}}
    </span>
    <span class="user-reviews product-reviews">
        {{#user.rating.numrates}}
            {{user.rating.numrates}} {{# str }} numrates, local_intellicart {{/ str }}
        {{/user.rating.numrates}}
    </span>
{{/user.showrating}}
{{#instructor.showrating}}
    <span class="user-rating product-rating">
        {{#instructor.rating.stars}}
            <i class="fa fa-star rating-star {{#selected}}selected{{/selected}}" data-rating="{{id}}"></i>
        {{/instructor.rating.stars}}
    </span>
    <span class="user-reviews product-reviews">
        {{#instructor.rating.numrates}}
            {{instructor.rating.numrates}} {{# str }} numrates, local_intellicart {{/ str }}
        {{/instructor.rating.numrates}}
    </span>
{{/instructor.showrating}}